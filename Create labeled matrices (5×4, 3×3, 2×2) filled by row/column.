# ----- 5×4 matrix, filled by ROW -----
m54_row <- matrix(
  data = 1:20,
  nrow = 5, ncol = 4, byrow = TRUE,
  dimnames = list(paste0("R", 1:5), paste0("C", 1:4))
)
cat("5x4 (by row):\n"); print(m54_row); cat("\n")

# ----- 3×3 matrix, filled by COLUMN -----
m33_col <- matrix(
  data = 11:19,
  nrow = 3, ncol = 3, byrow = FALSE,
  dimnames = list(paste0("r", 1:3), paste0("c", 1:3))
)
cat("3x3 (by column):\n"); print(m33_col); cat("\n")

# ----- 2×2 examples: by ROW and by COLUMN (to compare) -----
m22_row <- matrix(
  data = c("a", "b", "c", "d"),
  nrow = 2, ncol = 2, byrow = TRUE,
  dimnames = list(paste0("Row", 1:2), paste0("Col", 1:2))
)
cat("2x2 (by row):\n"); print(m22_row); cat("\n")

m22_col <- matrix(
  data = c("a", "b", "c", "d"),
  nrow = 2, ncol = 2, byrow = FALSE,
  dimnames = list(paste0("Row", 1:2), paste0("Col", 1:2))
)
cat("2x2 (by column):\n"); print(m22_col); cat("\n")
